<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Plan_List_Item"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="5dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/Plan_List_Item_Switch"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Plan_List_Item_Title"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:paddingStart="10dp"
                android:text="TextView"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Plan_List_Item_Week"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/Plan_List_Item_Week"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/Plan_List_Item_Time"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="TextView"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Plan_List_Item_Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
